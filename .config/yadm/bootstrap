#! /bin/bash

OS=$(uname -o)

copy_os_specific_files() {
  local SRC="${HOME}/.config/yadm/${OS}" 
  if [ -d $SRC ]; then
     cp -r ${SRC}/. ${HOME}
  fi
}

setup_linux() {
  sudo apt update
  sudo apt install -y bash-completion curl fail2ban git git-lfs gnupg htop luarocks mosh ncdu tmux ufw 
  curl https://get.volta.sh | bash
}

case $OS in 
  "GNU/Linux")
    OS=Linux
    copy_os_specific_files
    setup_linux
    ;;
  "Android")
    OS=Android 
    copy_os_specific_files
    ;;
  *)
    # .config/yadm/bootstrap.d/${OS}.sh
    echo Unsupported OS: $OS
    ;;
esac

